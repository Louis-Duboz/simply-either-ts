{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "strictNullChecks": true,
        "noImplicitAny": true,
        "isolatedModules": true,
        "declaration": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "outDir": "Build",
    },
    "include": [
        "./Source"
    ],
    "exclude": [
        "node_modules",
        "./Tests"
    ]
}